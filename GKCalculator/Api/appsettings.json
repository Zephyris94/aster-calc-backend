{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "DataSource": {
    "UseCache": "true",
    "BlobContainerName": "",
    "DataSourceFile": "",
    "ExcelPath": ""
  },
  "ConnectionStrings": {
    "AzureSqlConnection": "",
    "AzureBlobStorageString": ""
  },
  "CORS": {
    "PolicyName": "AllowOrigin",
    "AllowedHosts": [
      "",
      "",
      ""
    ]
  },
  "NLog": {
    "extensions": [
      { "assembly": "NLog.Extensions.AzureBlobStorage" },
      { "assembly": "NLog.Web.AspNetCore" }
    ],
    "throwConfigExceptions": true,
    "targets": {
      "async": true,
      "console": {
        "type": "Console",
        "layout": "${longdate}|${event-properties:item=EventId_Id}|${uppercase:${level}}|${logger}|${message} ${exception:format=tostring}"
      },
      "blobstorage": {
        "type": "AzureBlobStorage",
        "connectionString": "",
        "container": "utility",
        "blobName": "${date:universalTime=true:format=yyyy-MM-dd}/${date:universalTime=true:format=HH}.log",
        "layout": "${longdate}|${event-properties:item=EventId_Id}|${uppercase:${level}}|${logger}|${message} ${exception:format=tostring}|url: ${aspnet-request-url}|action: ${aspnet-mvc-action}"
      },
      "logcloud": {
        "type": "WebService",
        "url": "",
        "protocol": "HttpPost",
        "parameters": [
          {
            "Name": "Date",
            "Layout": {
              "type": "JsonLayout",
              "Attributes": [
                {
                  "name": "Date",
                  "layout": "${longdate}"
                }
              ]
            }
          },
          {
            "Name": "Level",
            "Layout": {
              "type": "JsonLayout",
              "Attributes": [
                {
                  "name": "Level",
                  "layout": "${level}"
                }
              ]
            }
          },
          {
            "Name": "Logger",
            "Layout": {
              "type": "JsonLayout",
              "Attributes": [
                {
                  "name": "Logger",
                  "layout": "${logger}"
                }
              ]
            }
          },
          {
            "Name": "Message",
            "Layout": {
              "type": "JsonLayout",
              "Attributes": [
                {
                  "name": "Message",
                  "layout": "${message}"
                }
              ]
            }
          }
        ]
      }
    },
    "rules": [
      {
        "logger": "Api.",
        "minLevel": "trace",
        "writeTo": "console"
      },
      {
        "logger": "*",
        "minLevel": "Info",
        "writeTo": "blobstorage"
      },
      {
        "logger": "Api.Controllers.PathFindingController",
        "minLevel": "Info",
        "writeTo": "logcloud"
      }
    ]
  }
}
